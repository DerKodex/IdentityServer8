{
  "version": "8.0.4-alpha",
  "nugetPackageVersion": {
    "semVer": 2, // optional. Set to either 1 or 2 to control how the NuGet package version string is generated. Default is 1.
    "precision": 3
  },
  "semVer1NumericIdentifierPadding": 3,
  "pathFilters": [
    // optional list of paths to consider when calculating version height.
    "!docs",
    "!.git",
    "!.vs",
    "!.config",
    "!.github",
    "!.config",
    "!Directory.Build.props",
    "!Directory.Build.targets",
    "!Directory.Packages.props",
    "docker-compose.yml",
    "docker-compose.override.yml",
    "docker-compose.vs.debug.yml",
    "docker-compose.vs.release.yml",
    "docker-compose.dcrpoj",
    "src/IdentityServer8.sln",
    "!global.json",
    "!IdentityServer8.DotNet.ruleset",
    "!LICENSCE",
    "!Nuget.config",
    "!SECURITY.md",
    "!SPONSORS.md",
    "!README.md",
    "!samples",
    "!nuget"
  ],
  "cloudBuild": {
    "setVersionVariables": true,
    "buildNumber": {
      "enabled": true,
      "includeCommitId": {
        "when":  "always",
        "where": "buildMetadata"
      }
    }
  },
  "release": {
    "tagName": "v{version}",
    "branchName": "v{version}",
    "versionIncrement": "minor",
    "firstUnstableTag": "alpha"
  }
}
